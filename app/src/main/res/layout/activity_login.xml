<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context="com.project.innovator.momsrecipe.controller.LoginActivity">

    <!--레이아웃으로 차지할 크기 지정~-->
    <ImageView
        android:id="@+id/imageMom"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/momicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:paddingBottom="30dp"
        />
    <RelativeLayout
        android:id="@+id/idlayout"
        android:layout_below="@+id/imageMom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        >

        <EditText
            android:id="@+id/idEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="아이디"
            />

        <EditText
            android:id="@+id/pwEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:layout_below="@id/idEdit"
            android:hint="비밀번호"
            />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pwEdit"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#FF8C26"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/btnjoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="회원가입"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnLogin"
            android:textColor="#555555"
            />

    </RelativeLayout>

</RelativeLayout>
